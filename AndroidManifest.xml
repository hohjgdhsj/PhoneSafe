<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.safephone"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    <!-- 允许读取电话状态SIM的权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 获取系统引导完成的事件 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 收发短信的权限 -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!-- 获取当前位置的权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 读写存储卡的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 获取联系人的权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!-- 设置 测试环境 -->
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.example.safephone" >
    </instrumentation>

    <application
        android:allowBackup="true"
        android:icon="@drawable/btn_mood_very_happy"
        android:label="@string/app_name"
        android:theme="@style/notitle" >

        <!-- 单人任务模式 -->
        <activity
            android:name="com.example.safephone.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 广告版本 -->
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- 导航 -->
        <activity
            android:name=".ActivityGuide"
            android:label="@string/app_name" >
        </activity>
        <!-- 欢迎界面 -->
        <activity
            android:name=".WelcomeMainActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- 设置界面 -->
        <activity
            android:name=".SettingActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- 找寻手机的界面 -->
        <activity
            android:name=".LostFindActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SetUp1Activity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SetUp2Activity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SetUp3Activity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SetUp4Activity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ContactActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- 注册广播监听事件 -->
        <receiver android:name=".receiver.BootCompliteReceiver" >

            <!-- 手机系统引导完成 -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <!-- 接受短信广播的接收器 -->
        <receiver android:name=".receiver.SmsReceiver" >

            <!-- 有序广播 ，有一定的优先级-->
            <intent-filter android:priority="1000">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <!-- 添加测试类库 -->
        <uses-library android:name="android.test.runner" />
    </application>

</manifest>